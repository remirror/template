{
  "extends": "./support/tsconfig.base.json",
  "compilerOptions": {
    "target": "es2017",
    "types": [
      "node",
      "jest",
      "jest-extended",
      "jest-axe",
      "@testing-library/jest-dom",
      "snapshot-diff"
    ],
    "noEmit": true,
    "importsNotUsedAsValues": "error",
    "skipLibCheck": true,
    "plugins": [
      { "name": "typescript-snapshots-plugin" },
      { "name": "typescript-plugin-css-modules" }
    ]
  },
  "include": ["packages/**/src", "global.d.ts"]
}
